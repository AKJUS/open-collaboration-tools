{
  "name": "oct-live-collaboration",
  "displayName": "OCT Live Collaboration",
  "description": "Connect with others and share your code in real-time collaboration sessions",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onFileSystem:collab"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Open Collaboration Tools",
      "properties": {
        "oct.serverUrl": {
          "type": ["string", "null"],
          "default": null,
          "description": "URL of the OCT Server instance for live collaboration sessions."
        }
      }
    },
    "commands": [
      {
        "command": "oct.login",
        "title": "Login to OCT Server",
        "category": "Open Collaboration Tools"
      },
      {
        "command": "oct.create-room",
        "title": "Create OCT Room",
        "category": "Open Collaboration Tools"
      },
      {
        "command": "oct.join-room",
        "title": "Join OCT Room",
        "category": "Open Collaboration Tools"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run check-types && node esbuild.js --production",
    "build": "npm run check-types && node esbuild.js",
    "watch": "node esbuild.js --watch",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "node-fetch": "^2.0.0",
    "open-collaboration-protocol": "0.0.7",
    "ws": "^8.17.0"
  },
  "devDependencies": {
    "@types/node-fetch": "^2.0.0",
    "@types/vscode": "^1.89.0",
    "@types/ws": "^8.5.10"
  }
}
