{
  "name": "oct-live-collaboration",
  "displayName": "OCT Live Collaboration",
  "description": "Connect with others and share your code in real-time collaboration sessions",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Open Collaboration Tools",
      "properties": {
        "oct.serverUrl": {
          "type": "string",
          "default": "",
          "description": "URL of the OCT Server instance for live collaboration sessions."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run check-types && node esbuild.js --production",
    "build": "npm run check-types && node esbuild.js",
    "watch": "node esbuild.js --watch",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "lodash.throttle": "^4.1.1",
    "node-fetch": "^2.0.0",
    "open-collaboration-protocol": "0.0.7",
    "ws": "^8.17.0"
  },
  "devDependencies": {
    "@types/lodash.throttle": "^4.1.9",
    "@types/node-fetch": "^2.0.0",
    "@types/vscode": "^1.89.0",
    "@types/ws": "^8.5.10"
  }
}
