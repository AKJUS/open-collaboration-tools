{
  "name": "oct-live-collaboration",
  "displayName": "OCT Live Collaboration",
  "description": "Connect with others and share your code in real-time collaboration sessions",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "capabilities": {
    "untrustedWorkspaces": {
        "supported": true
    }
  },
  "contributes": {
    "configuration": {
      "title": "Open Collaboration Tools",
      "properties": {
        "oct.serverUrl": {
          "type": "string",
          "default": "",
          "description": "URL of the OCT Server instance for live collaboration sessions."
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "oct-room-view",
          "name": "Current Collaboration Session",
          "when": "oct.connection === true"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "oct.followPeer",
          "when": "viewItem == peer", 
          "group": "inline"
        },
        {
          "command": "oct.stopFollowPeer",
          "when": "viewItem == followedPeer", 
          "group": "inline"
        }
      ]
    },
    "commands": [
      {
        "command": "oct.followPeer",
        "title": "Follow Peer",
        "category": "OCT",
        "icon": "$(go-to-file)"
      },
      {
        "command": "oct.stopFollowPeer",
        "title": "Stop Follow Peer",
        "category": "OCT",
        "icon": "$(circle-slash)"
      }],
    "colors": [
      {
        "id": "oct.user.yellow",
        "description": "Color for user 1 in OCT collaboration sessions",
        "defaults": {
          "dark": "#fcb900",
          "light": "#fcb900"
        }
      },
      {
        "id": "oct.user.green",
        "description": "Color for user 1 in OCT collaboration sessions",
        "defaults": {
          "dark": "#107c10",
          "light": "#107c10"
        }
      },
      {
        "id": "oct.user.magenta",
        "description": "Color for user 1 in OCT collaboration sessions",
        "defaults": {
          "dark": "#b4009e",
          "light": "#b4009e"
        }
      },
      {
        "id": "oct.user.lightGreen",
        "description": "Color for user 1 in OCT collaboration sessions",
        "defaults": {
          "dark": "#bad80a",
          "light": "#bad80a"
        }
      },
      {
        "id": "oct.user.lightOrange",
        "description": "Color for user 1 in OCT collaboration sessions",
        "defaults": {
          "dark": "#ff8c00",
          "light": "#ff8c00"
        }
      },
      {
        "id": "oct.user.lightMagenta",
        "description": "Color for user 1 in OCT collaboration sessions",
        "defaults": {
          "dark": "#e3008c",
          "light": "#e3008c"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run check-types && node esbuild.js --production",
    "build": "npm run check-types && node esbuild.js",
    "watch": "node esbuild.js --watch",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "lodash.throttle": "^4.1.1",
    "node-fetch": "^2.0.0",
    "open-collaboration-protocol": "0.0.7",
    "ws": "^8.17.0"
  },
  "devDependencies": {
    "@types/lodash.throttle": "^4.1.9",
    "@types/node-fetch": "^2.0.0",
    "@types/vscode": "^1.89.0",
    "@types/ws": "^8.5.10"
  }
}
